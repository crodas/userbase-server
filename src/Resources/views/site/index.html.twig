{% extends "site/layout.html.twig" %}

{% block content %}

{% if user is defined %}
<h1>{{ "index.welcome_username"|trans({ '%username%': user.getName() }) }}</h1>
{% else %}
<h1>{{ "index.pleaselogin"|trans }}</h1>
{% endif %}
<a href="{{ path('login') }}" class="btn btn-success btn-lg">{{ "common.action_login"|trans }}</a><br />
<br />
<a href="{{ path('signup') }}" class="btn btn-default btn-lg">{{ "common.action_signup"|trans }}</a><br />



{% endblock %}
