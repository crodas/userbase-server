{% extends "admin/layout.html.twig" %}
{% block content %}
<h1>Add new users</h1>

{% if error != null %}
    <div class="alert alert-danger" role="alert">
        <i class="fa fa-exclamation-circle"></i>
        {{ error }}
    </div>
{% endif %}

<form action="#" method="post" name="frmUser" id="frmUser">
    <div class="form-group form-group form-group">
        
        {% if postfix is defined %}
            <div class="input-group">
                <input name="_username" id="_username" value="{{_username|default("")}}"  autofocus class="form-control" placeholder="{{ "common.label_username"|trans }}" required="required"  />
                <div class="input-group-addon">{{ postfix|star|raw }}</div>
            </div>
        {% else %}
            <input name="_username" value="{{_username|default("")}}" autofocus class="form-control" placeholder="{{ "common.label_username"|trans }}" required="required" />
        {% endif %}
         <div id="chkUserExist" style="dispaly:none;"></div> 
    </div>

    <div class="form-group form-group">
         <input name="_email" value="{{ _email|default("") }}" class="form-control" placeholder="{{ "common.label_email"|trans }}" type="email" required="required" />
    </div>

    <div class="form-group form-group">
         <input name="_password" id="_password" class="form-control" placeholder="{{ "common.label_password"|trans }}" type="password" required="required" />
    </div>
    
    <div class="form-group form-group">
         <input name="_password2" id="_password2" class="form-control" placeholder="{{ "common.label_passwordrepeat"|trans }}" type="password" required="required" />
    </div>
    <div class="buttonbox">
        <button type="submit" class="btn btn-success" id="btnSubmit" name="btnSubmit">
            <i class="fa fa-server"></i>
            Save
        </button>
        <a href="{{ path('admin_user_list') }}" class="btn btn-default" role="button">
            <i class="fa fa-arrow-left"></i>
            Back
        </a>
    </div>    
</form>
<script type="text/javascript">
    window.checkUser = {url: "{{ path('admin_user_check') }}" };
</script>
{% endblock %}